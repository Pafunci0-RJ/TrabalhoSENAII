@model IEnumerable<Perfumes.Models.Categoria>

@{
    ViewData["Title"] = "Index";
}

<h1>Categoria</h1>

<p>
    <a asp-action="Create">Criar novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CategoriaId"style="color:darkorchid">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.CategoriaId" style="color:darkorchid">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.CategoriaId" style="color:darkorchid">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
